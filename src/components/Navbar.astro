  <script>
    // Select the button and the menu
    const menuButton = document.querySelector('.lg\\:hidden button');
    const menuItems = document.querySelector('.hidden.lg\\:flex');
    
    // Create mobile menu container if it doesn't exist
    let mobileMenu = document.querySelector('.mobile-menu-container');
    if (!mobileMenu) {
      mobileMenu = document.createElement('div');
      mobileMenu.className = 'mobile-menu-container fixed inset-0 bg-white z-50 transform translate-x-full transition-transform duration-300 ease-in-out lg:hidden';
      
      // Clone desktop menu items for mobile
      if (menuItems) {
        const mobileMenuContent = menuItems.cloneNode(true);
        mobileMenuContent.className = 'flex flex-col p-6 space-y-4';
        mobileMenu.appendChild(mobileMenuContent);

---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen flex flex-col items-center bg-gradient-to-b from-[#E6E0FF] to-[#F4F1FF] p-8">
    <!-- Hero Section -->
    <div class="relative w-full max-w-5xl text-center">
      <h1 class="text-6xl font-extrabold text-gray-900 tracking-tight drop-shadow-md">EXCELLR</h1>
      <p class="text-lg text-gray-700 mt-3">Your gateway to mastering Data Science</p>

      <!-- Background Effect -->
      <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 w-[350px] h-[120px] bg-purple-400 opacity-30 blur-3xl rounded-full"></div>
    </div>

    <!-- Quick Start Topics -->
    <div class="mt-12 flex gap-6">
      <a href="/resources/pandas" class="group relative px-8 py-4 bg-purple-600 text-white text-lg font-semibold rounded-lg shadow-xl transition-transform transform hover:scale-105 hover:shadow-2xl">
        Pandas for Python
        <span class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-white opacity-0 group-hover:opacity-100 transition-opacity"></span>
      </a>
      <a href="/resources/matplotlib" class="group relative px-8 py-4 bg-purple-600 text-white text-lg font-semibold rounded-lg shadow-xl transition-transform transform hover:scale-105 hover:shadow-2xl">
        Matplotlib for Python
        <span class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-white opacity-0 group-hover:opacity-100 transition-opacity"></span>
      </a>
      <a href="/resources/sql" class="group relative px-8 py-4 bg-purple-600 text-white text-lg font-semibold rounded-lg shadow-xl transition-transform transform hover:scale-105 hover:shadow-2xl">
        SQL for Data Science
        <span class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-white opacity-0 group-hover:opacity-100 transition-opacity"></span>
      </a>
    </div>

    <!-- Animated Divider -->
    <div class="mt-12 w-40 h-1 bg-purple-500 opacity-75 rounded-full animate-pulse"></div>

    <!-- Workshop Resources Section -->
    <div class="mt-12 text-center">
      <h2 class="text-3xl font-semibold text-gray-800">Missed out on one of our workshops?</h2>
      <p class="text-gray-600 mt-2">Browse through all of our learning resources from previous events!</p>
    </div>

    <!-- Resource Cards -->
    <div class="grid grid-cols-3 gap-6 mt-8">
      <div class="w-40 h-40 bg-white border border-purple-400 rounded-lg shadow-md hover:scale-105 transition-transform"></div>
      <div class="w-40 h-40 bg-white border border-purple-400 rounded-lg shadow-md hover:scale-105 transition-transform"></div>
      <div class="w-40 h-40 bg-white border border-purple-400 rounded-lg shadow-md hover:scale-105 transition-transform"></div>
      <div class="w-40 h-40 bg-white border border-purple-400 rounded-lg shadow-md hover:scale-105 transition-transform"></div>
      <div class="w-40 h-40 bg-white border border-purple-400 rounded-lg shadow-md hover:scale-105 transition-transform"></div>
      <div class="w-40 h-40 bg-white border border-purple-400 rounded-lg shadow-md hover:scale-105 transition-transform"></div>
    </div>
  </div>
</Layout>
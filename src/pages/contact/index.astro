---
import Container from '../../components/Container.astro';
import Header from '../../components/Header.astro';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Contact Us | UNSW DataSoc">
  
  <!-- Welcome Section with Panda -->
  <section id="welcome-section" class="h-[92vh] bg-[#ffebe1] flex flex-col justify-center relative overflow-hidden">
    <div class="container mx-auto px-12 flex flex-col md:flex-row items-center justify-between">
      <!-- Left Side Text -->
      <div class="md:w-1/2 font-['Lexend'] mb-2 md:mb-0 md:pl-12 pt-6">
        <p class="text-[#134f5c] text-lg mb-1">Have a question or idea?</p>
        <h1 class="text-4xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-15 leading-tight">We're here to listen.</h1>
        <p class="text-gray-700 text-lg mb-6 max-w-lg leading-relaxed">Connect with fellow data enthusiasts and our executive team below. We look forward to hearing from you!</p>
        
        <!-- Contact Info with Icons -->
        <div class="space-y-3">
          <div class="flex items-center text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <a href="https://www.google.com/maps/place/UNSW+Sydney/@-33.9173425,151.2286926,17z/data=!3m2!4b1!5s0x6b12b18b0e145f3f:0x3800b518df9d665!4m6!3m5!1s0x6b12b18b0302c1a7:0x1d017d69037a07a0!8m2!3d-33.917347!4d151.2312675!16zL20vMDEybHpy?entry=ttu&g_ep=EgoyMDI1MDQxMy4wIKXMDSoASAFQAw%3D%3D" target="_blank" rel="noopener noreferrer" class="text-gray-700 hover:underline">UNSW, Sydney, NSW, Australia</a>
          </div>
          
          <div class="flex items-center text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:hello@unswdata.com" class="text-gray-700 hover:underline">hello@unswdata.com</a>
          </div>
          
          <div class="flex items-center text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="https://linkedin.com/company/DataSoc" target="_blank" rel="noopener noreferrer" class="text-gray-700 hover:underline">linkedin.com/company/DataSoc</a>
          </div>
        </div>
      </div>
      
      <!-- Right Side Panda Image -->
      <div class="md:w-1/2 flex justify-center items-center mt-6 md:mt-0">
        <img src="/panda-image.png" alt="Friendly Panda with Hello sign" class="w-auto h-auto max-w-sm lg:max-w-md" />
      </div>
    </div>
    
    <!-- Scroll Down Arrow - REPLACED WITH IMAGE -->
    <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 cursor-pointer animate-bounce" id="scroll-down">
      <img src="/scroll-arrow.png" alt="Scroll Down" class="h-8 w-8" />
    </div>
  </section>

  <!-- Contact Form Section -->
  <section id="contact-form-section" class="py-8 bg-gray-50">
    <Container>
      <div class="flex flex-col md:flex-row gap-8 mt-4 mb-8 max-w-[90%] mx-auto">
        <!-- Contact Form Section -->
        <div class="md:w-1/2 bg-white p-5 rounded-lg shadow-md border border-gray-200 font-['Lexend']">
          <h2 class="mb-4 text-gray-700 text-center text-2xl font-medium">Get in Touch</h2>
          
          <form class="space-y-3">
            <div>
              <label for="fullName" class="block text-sm text-gray-600 uppercase mb-1">FULL NAME</label>
              <input 
                type="text" 
                id="fullName" 
                name="fullName" 
                placeholder="Please enter your full name" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                required
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm text-gray-600 uppercase mb-1">EMAIL ADDRESS</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="Please enter your email" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                required
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm text-gray-600 uppercase mb-1">PHONE NUMBER</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                placeholder="Please enter your phone number" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm text-gray-600 uppercase mb-1">WHAT DO YOU HAVE IN MIND?</label>
              <textarea 
                id="message" 
                name="message" 
                placeholder="Please enter your query" 
                rows="3"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              ></textarea>
            </div>
            
            <div class="flex justify-center pt-3">
              <button 
                type="submit" 
                class="px-6 py-2 bg-[#ffcd95] text-gray-800 rounded-md hover:bg-amber-400 transition-colors font-bold text-lg"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
        
        <!-- Map & Social Media Section -->
        <div class="md:w-1/2 flex flex-col font-['Lexend']">
          <!-- Team image replacing map placeholder -->
          <div class="h-64 md:h-72 bg-white rounded-lg shadow-md border border-gray-200 mb-18 overflow-hidden">
            <img src="/team2025.JPG" alt="DataSoc Team 2025" class="w-full h-full object-cover" />
          </div>
          
          <!-- Social Media -->
          <div class="text-center">
            <h3 class="mb-4 font-normal text-2xl">Follow us on social media</h3>
            <div class="flex justify-center gap-8 mb-6">
              <!-- Facebook -->
              <a href="https://www.facebook.com/DataSoc/" target="_blank" rel="noopener noreferrer" class="bg-blue-600 p-3 rounded text-white hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="currentColor" viewBox="0 0 320 512">
                  <path d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z"/>
                </svg>
              </a>
              
              <!-- Instagram -->
              <a href="https://www.instagram.com/unswdatasoc/" target="_blank" rel="noopener noreferrer" class="bg-gradient-to-tr from-purple-600 via-pink-600 to-orange-500 p-3 rounded text-white hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="currentColor" viewBox="0 0 448 512">
                  <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"/>
                </svg>
              </a>
              
              <!-- YouTube -->
              <a href="https://www.youtube.com/@unswdatasoc" target="_blank" rel="noopener noreferrer" class="bg-red-600 p-3 rounded text-white hover:scale-110 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="currentColor" viewBox="0 0 576 512">
                  <path d="M549.655 124.083c-6.281-23.65-24.787-42.276-48.284-48.597C458.781 64 288 64 288 64S117.22 64 74.629 75.486c-23.497 6.322-42.003 24.947-48.284 48.597-11.412 42.867-11.412 132.305-11.412 132.305s0 89.438 11.412 132.305c6.281 23.65 24.787 41.5 48.284 47.821C117.22 448 288 448 288 448s170.78 0 213.371-11.486c23.497-6.321 42.003-24.171 48.284-47.821 11.412-42.867 11.412-132.305 11.412-132.305s0-89.438-11.412-132.305zm-317.51 213.508V175.185l142.739 81.205-142.739 81.201z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Font Import for Lexend with scope -->
  <style>
    /* Import the Lexend font */
    @import url('https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap');
    
    /* Apply Lexend only to specific content elements */
    .font-\[\'Lexend\'\] input,
    .font-\[\'Lexend\'\] textarea,
    .font-\[\'Lexend\'\] button,
    .font-\[\'Lexend\'\] label,
    .font-\[\'Lexend\'\] h1,
    .font-\[\'Lexend\'\] h2,
    .font-\[\'Lexend\'\] h3,
    .font-\[\'Lexend\'\] h4,
    .font-\[\'Lexend\'\] h5,
    .font-\[\'Lexend\'\] h6,
    .font-\[\'Lexend\'\] p {
      font-family: 'Lexend', sans-serif;
    }
    
    /* Style adjustments for form inputs to match the design */
    .font-\[\'Lexend\'\] input,
    .font-\[\'Lexend\'\] textarea {
      font-size: 0.95rem;
    }
    
    .font-\[\'Lexend\'\] label {
      letter-spacing: 0.5px;
    }

    /* Smooth scroll behavior for the entire page */
    html {
      scroll-behavior: smooth;
    }
    
    /* Text size adjustments to match concept */
    #welcome-section h1 {
      font-size: 2.75rem;
      line-height: 1.2;
    }
    
    @media (min-width: 768px) {
      #welcome-section h1 {
        font-size: 3rem;
      }
    }
    
    @media (min-width: 1024px) {
      #welcome-section h1 {
        font-size: 3.5rem;
      }
    }
  </style>

  <!-- Script for Smooth Scrolling -->
  <script>
    // Wait for the DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', function() {
  // Get the scroll-down button
  const scrollButton = document.getElementById('scroll-down');
  
  // Only add event listener if the button exists
  if (scrollButton) {
    scrollButton.addEventListener('click', function() {
      // Check if element exists before scrolling
      const contactSection = document.getElementById('contact-form-section');
      if (contactSection) {
        // Add an offset to the scrolling behavior
        const yOffset = -63; // Adjust this value as needed
        const y = contactSection.getBoundingClientRect().top + window.pageYOffset + yOffset;
        
        window.scrollTo({
          top: y,
          behavior: 'smooth'
        });
      }
    });
  }
});
  </script>
</Layout>